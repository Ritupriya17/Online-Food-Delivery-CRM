<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Delivery_Agent</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Out for Delivery&quot;),
    ISBLANK( $ObjectType.Delivery__c.Fields.Delivery_Agent__c )
)</errorConditionFormula>
    <errorMessage>Please assign a Delivery Agent before marking order Out for Delivery.</errorMessage>
</ValidationRule>
